// Place your key bindings in this file to override the defaults
[

    //Cursor
    {"key": "ctrl+alt+down", "command": "editor.action.insertCursorBelow", "when": "editorTextFocus"},
    {"key": "ctrl+alt+up", "command": "editor.action.insertCursorAbove", "when": "editorTextFocus"},
    
    // TERMINAL INTEGRATION: 
    { "key": "alt+cmd+down", "command": "workbench.action.terminal.focusNext"},
    { "key": "alt+cmd+up",   "command": "workbench.action.terminal.focusPrevious"},
    { "key": "alt+cmd+right","command": "workbench.action.terminal.focusNextPane"},
    { "key": "alt+cmd+left", "command": "workbench.action.terminal.focusPreviousPane"},
    { "key": "shift+cmd+'",  "command": "workbench.action.terminal.kill"},
    { "key": "shift+cmd+\\", "command": "workbench.action.terminal.new" },
    { "key": "cmd+'", "command": "workbench.action.terminal.focus", "when": "editorTextFocus" },
    { "key": "cmd+'","command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"},
    
        
    //DEBUG
    { "key":"ctrl+0","command": "workbench.action.debug.start", "when": "!inDebugMode" },
    { "key":"ctrl+0","command": "workbench.action.debug.continue", "when": "inDebugMode" },
    { "key":"ctrl+9","command": "workbench.action.debug.stepOver", "when": "inDebugMode" },
    { "key":"ctrl+8","command": "workbench.action.debug.stepInto", "when": "inDebugMode" },
    { "key":"ctrl+7","command": "workbench.action.debug.stepOut", "when": "inDebugMode" },
    { "key":"ctrl+6","command": "workbench.action.debug.restart", "when": "inDebugMode" },
    { "key":"ctrl+5","command": "workbench.action.debug.stop", "when": "inDebugMode" },

    //SIDEBAR
    { "key": "shift+cmd+d", "command": "workbench.view.debug" },
    { "key": "shift+cmd+e", "command": "workbench.view.explorer" },
    { "key": "shift+cmd+e", "command": "workbench.view.explorer" },
    { "key": "shift+cmd+x", "command": "workbench.view.extensions" },
    { "key": "shift+cmd+w", "command": "workbench.view.extension.dockerView" },
    { "key": "shift+cmd+r","command": "workbench.view.scm" },
    { "key": "shift+cmd+f", "command": "workbench.view.search", "when": "!searchViewletVisible" },
 ]